{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "noResolve": false,
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "allowJs": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "outDir": "lib",
        "declarationDir": "lib",
        "baseUrl": "./src" /* Base directory to resolve non-absolute module names. */,
        "paths": {
            "atoms": ["./atoms"],
            "theme": ["./theme"],
            "helpers": ["./helpers"],
            "consts": ["./consts"]
        }
    },
    "exclude": [
        "./node_modules/**/*", "./build", "./scripts"
    ]
}